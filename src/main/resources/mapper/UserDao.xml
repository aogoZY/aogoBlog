<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-4-mapper.dtd" >
<mapper namespace="com.star.dao.UserDao">

    <!--查询用户名和密码-->
    <select id="findByUsernameAndPassword" resultType="com.star.entity.User">
        select * from myblog.t_user
        where username = #{username} and password = #{password};
    </select>

    <select id="findAll" resultType="com.star.entity.User">
            select * from myblog.users where id=#{id};
    </select>>
</mapper>

